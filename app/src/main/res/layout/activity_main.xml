<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    tools:context=".MainActivity">

    <!-- Contenedor principal -->
    <androidx.cardview.widget.CardView
        style="@style/App.CardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Icono de huella digital -->
            <ImageView
                android:id="@+id/fingerprintIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:src="@drawable/ic_fingerprint"
                app:tint="@color/accent_gold" />

            <!-- Título -->
            <TextView
                android:id="@+id/titleText"
                style="@style/App.TitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/auth_title"
                android:layout_marginBottom="16dp"/>

            <!-- Descripción -->
            <TextView
                android:id="@+id/descriptionText"
                style="@style/App.DescriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/auth_description"
                android:layout_marginBottom="32dp"/>

            <!-- Estado de autenticación -->
            <TextView
                android:id="@+id/statusText"
                style="@style/App.DescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:text="@string/ready_to_authenticate" />

            <!-- Botón de autenticación -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/authenticateButton"
                style="@style/App.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:text="@string/authenticate_button"
                app:icon="@drawable/ic_fingerprint"
                app:iconGravity="textStart" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>