<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema Base para Modo Oscuro -->
    <style name="Theme.Act12" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores Primarios (Azul) -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_dark_blue</item>
        <item name="colorOnPrimary">@color/text_primary_dark</item> <!-- Texto blanco sobre azul -->

        <!-- Colores Secundarios (Dorado) -->
        <item name="colorSecondary">@color/accent_gold</item>
        <item name="colorSecondaryVariant">@color/accent_gold_dark</item>
        <item name="colorOnSecondary">@color/primary_dark_blue</item> <!-- Texto azul oscuro sobre dorado -->

        <!-- Color de la barra de estado -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Fondo de la app -->
        <item name="android:windowBackground">@color/background_dark</item>
    </style>

    <!-- Estilo para el CardView -->
    <style name="App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/background_card_dark</item>
    </style>

    <!-- Estilo para TÃ­tulos -->
    <style name="App.TitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Estilo para Descripciones -->
    <style name="App.DescriptionText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Estilo para Botones -->
    <style name="App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/accent_gold</item>
        <item name="android:textColor">@color/primary_dark_blue</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>
